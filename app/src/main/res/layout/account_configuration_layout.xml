<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/welcome_step_1"
        android:visibility="invisible"
        android:id="@+id/step_image"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/step_image"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="22sp"
        android:id="@+id/title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#cccccc"
        android:textSize="18sp"
        android:id="@+id/subtitle"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/welcome_start"
        android:id="@+id/enter_icon"/>
    <com.wanghuan.accountconfiguration.view.AccountConfigurationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/account_configuration_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/birthday_loopview_layout"
        android:visibility="gone"
        android:background="@mipmap/welcome_step_date_mask">
        <com.wanghuan.accountconfiguration.view.wheel.LoopView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/welcome_birthday_year"/>
        <com.wanghuan.accountconfiguration.view.wheel.LoopView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/welcome_birthday_month"/>
        <com.wanghuan.accountconfiguration.view.wheel.LoopView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/welcome_birthday_day"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/welcome_step_input_bg9"
        android:hint="昵称"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone"
        android:id="@+id/welcome_nickname_edit"/>

</RelativeLayout>